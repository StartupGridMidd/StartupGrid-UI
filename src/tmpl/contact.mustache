<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      {{#alert}}
        <div class="alert {{class}}" role="alert">{{message}}</div>
      {{/alert}}
      <div class="contact">
        <h1>Contact</h1>
        <form method="POST" action="/__/forms/contact">
          <div class="row">
            <div class="form-group col-md-6">
              <!-- <label for="name">Name</label> -->
              <input class="form-control input-lg" id="name" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group col-md-6">
              <!-- <label for="email">Email</label> -->
              <input class="form-control input-lg" id="email" type="email" name="email" placeholder="email">
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <!-- <label for="message">Message:</label> -->
              <textarea rows="4" class="form-control input-lg" id="message" name="message" placeholder="question"></textarea>
            </div>
          </div>
          <div class="form-group text-right no-margin">
            <button type="submit" class="btn btn-md btn-default">submit</button>
            <div class="clear"></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
